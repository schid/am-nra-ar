@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}

@Html.Partial("desktopHeader", new ViewDataDictionary { { "currentPage", CurrentPage.Id } })

@Html.Partial("desktopNav")

@Html.Partial("slider")

@if (@Umbraco.Field("bodyContent").ToString().Trim() != "")
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">@Umbraco.Field("bodyContent")</div>
        </div>
    </div>
}

@Html.Partial("homepageTrending")

<div class="container">
    <div class="row">
        <div class="col-sm-9">
            @Html.Partial("homepageReviews")
            @Html.Partial("homepageExtras")
        </div>
        <div class="col-sm-3">
            @Html.Partial("homepageAds")
        </div>
    </div>

</div>

@Html.Partial("homepageVideo")

@Html.Partial("inlineAds")

@Html.Partial("homepageMore")




@Html.Partial("desktopFooter")

</body>
</html>
